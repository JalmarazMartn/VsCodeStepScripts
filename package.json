{
	"name": "vsCodeScriptStepsExecution",
	"displayName": "VsCode script steps excution",
	"description": "Configure and execute a file with steps that execute taks, extension commands and open documents",
	"publisher": "JessAlmarazMartin",	
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscodestepsscripts.executeScript"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscodestepsscripts.executeScript",
				"title": "JAM: Execute current VsCode Script"
			}
		],
		"snippets": [
			{			  
			  "language": "json",				
			  "path": "./src/Snippets.json"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
